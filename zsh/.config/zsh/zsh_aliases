# alias for ls
alias sl='ls'
alias l='ls -ltrG'
alias la='ls -lhaG'
alias ll='ls -lhG'
case "$(uname -s)" in
    Darwin)
        # echo 'Mac OS X'
        alias ls='ls -G'
        ;;
    Linux)
        alias ls='ls --color=auto'
        alias x='xhost +SI:localuser:root;sudo xkeysnail --watch ~/.xkeysnail/config.py'
        alias m='cd /mnt'
        alias open='xdg-open'
        ;;

    CYGWIN* | MINGW32* | MSYS* | MINGW*)
        # echo 'MS Windows'
        ;;
    *)
        # echo 'Other OS'
        ;;
esac

# alias for cd
alias pd='pushd >/dev/null 2>&1'
alias ...='cd ../../'
alias ..='popd >/dev/null 2>&1|| cd ..'
alias c='cd ~/'
alias d='cd ~/dotfiles'
alias f='cd ~/Code'
alias j='cd ~/Documents/TokyoTech/jk4/1q'
alias k='cd ~/Documents/TokyoTech/DeepLab/workspace'

# alias for git
alias g='git'
alias ga='git add'
alias gb='git branch'
alias gbr='git branch -av'
alias gc='git commit'
alias gck='git checkout'
alias gcl='git clone'
alias gd='git diff'
alias gi='git init;pc'
alias gm='git merge'
alias gpl='git pull'
alias gps='git push'
alias gs='git branch;git status'
alias gt='git tree'
alias git-gc-strong='git \
  -c gc.pruneExpire=now \
  -c gc.worktreePruneExpire=now \
  -c gc.reflogExpire=now \
  -c gc.reflogExpireUnreachable=now \
  -c gc.rerereResolved=now \
  -c gc.rerereUnResolved=now \
  gc --aggressive'
alias pc='pre-commit install&&cp $HOME/.pre-commit-config.yaml .'

# alias for tools
alias b='bat'
alias dl='lazydocker'
alias gl='lazygit'
alias jq.='jq .'
alias ldk='lazydocker' # "ld" overwrite ld command.
alias lg='lazygit'
alias n.='n .'
alias n='nvim'
alias nn='nvim-nighty'
alias sn='nvim -u $HOME/simple.vimrc -N'
alias sv='vim -u $HOME/simple.vimrc -N'
alias t='tmux'
alias v='vim'
alias vn='nvim -u NONE -N'
alias vv='vim -u NONE -N'
alias z='fzf'

# alias for zsh
alias zshtime='for for i in $(seq 1 10); do time zsh -i -c exit; done'
alias init='source $ZDOTDIR/zsh_env_lazy'

# other useful alias
alias grep='grep --color=auto'
alias G='grep'
alias his='history -E -i 1 | fzf'
alias jn='jupyter notebook'
alias jl='jupyter lab'
alias ggl='open -a google\ chrome'
alias jk='ssh -ND 1080 titech-computing-room'
